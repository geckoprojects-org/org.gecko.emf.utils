-plugin.jacoco: \
	aQute.bnd.repository.maven.pom.provider.BndPomRepository;\
		releaseUrl			= "https://repo.maven.apache.org/maven2/";\
		revision            = "${dependencies.jacoco}";\
		transitive          = false;\
        poll.time			= -1; \
		name                = "Jacoco Dependencies"
jacoco.version: 0.8.6

## Jacoco Dependencies
dependencies.jacoco:\
	org.jacoco:org.jacoco.agent:jar:runtime:${jacoco.version},\
	org.jacoco:org.jacoco.agent:jar:${jacoco.version},\
	org.jacoco:org.jacoco.ant:${jacoco.version}
	org.jacoco:org.jacoco.core:${jacoco.version}

## Runpath and vm args
-runpath.jacoco:\
	org.jacoco.agent,\
	org.jacoco.ant,\
	org.jacoco:org.jacoco.agent:jar:runtime

-runvm.coverage: -javaagent:${repo;org.jacoco:org.jacoco.agent:jar:runtime;latest}=destfile=${target-dir}/jacoco.exec

## BndPomRepository could load g_a_v_c sind 6.0.0
-require-bnd: "(version>=6.2.0)"